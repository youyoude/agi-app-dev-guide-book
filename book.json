{
  "title": "AI应用软件开发指南",
  "description": "一本关于AI应用软件开发的实用指南",
  "author": "马云起",
  "language": "zh-hans",
  "gitbook": "3.2.3",
  "root": ".",
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md"
  },
  "plugins": [
    "github",
    "anchors",
    "search-pro",
    "copy-code-button",
    "code",
    "splitter",
    "page-toc-button",
    "anchor-navigation-ex",
    "expandable-chapters-small",
    "back-to-top-button",
    "chapter-fold",
    "edit-link",
    "prism",
    "-highlight",
    "theme-comscore"
  ],
  "pluginsConfig": {
    "github": {
      "url": "https://github.com/youyoude/agi-app-dev-guide-book"
    },
    "edit-link": {
      "base": "https://github.com/youyoude/agi-app-dev-guide-book/edit/main",
      "label": "编辑本页"
    },
    "anchor-navigation-ex": {
      "showLevel": false,
      "associatedWithSummary": true,
      "printLog": false,
      "multipleH1": true,
      "mode": "float",
      "showGoTop": true,
      "float": {
        "floatIcon": "fa fa-navicon",
        "showLevelIcon": false,
        "level1Icon": "fa fa-hand-o-right",
        "level2Icon": "fa fa-hand-o-right",
        "level3Icon": "fa fa-hand-o-right"
      },
      "pageTop": {
        "showLevelIcon": false,
        "level1Icon": "fa fa-hand-o-right",
        "level2Icon": "fa fa-hand-o-right",
        "level3Icon": "fa fa-hand-o-right"
      }
    },
    "page-toc-button": {
      "maxTocDepth": 2,
      "minTocSize": 2
    },
    "search-pro": {
      "cutWordLib": "nodejieba",
      "defineWord": ["AI应用软件", "智能体", "Agent", "LLM", "大语言模型", "智能态势感知", "智能涌现", "AI-Agent", "上下文工程", "智能思考工程"]
    },
    "theme-comscore": {
      "showHeader": true,
      "showLevel": true
    },
    "prism": {
      "css": [
        "prism-themes/themes/prism-base16-ateliersulphurpool.light.css"
      ]
    }
  },
  "variables": {
    "version": "1.1.0",
    "updated": "2025-09-25"
  },
  "links": {
    "sidebar": {
      "作者简介": "作者简介.md",
      "GitHub仓库": "https://github.com/youyoude/agi-app-dev-guide-book"
    }
  }
}
